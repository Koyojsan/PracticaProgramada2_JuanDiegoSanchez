@model PracticaProgramada2_JuanDiegoSanchez.Models.Usuario
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Inicio de Sesión</h1>
    <form asp-controller="Loguear" asp-action="Login" method="post">
        <div class="form-floating">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" required asp-for="Email">
            <label for="floatingInput">Email</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" required asp-for="Contrasena">
            <label for="floatingPassword">Contraseña</label>
        </div>

        <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Remember me
            </label>
        </div>

        <div class="d-grid gap-2 mb-3">
            <button class="btn btn-primary" type="submit">Ingresar</button>
        </div>

        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Regresar</a>

        <p class="mt-5 mb-3 text-body-secondary">© 2017–2024</p>
    </form>
</div>


